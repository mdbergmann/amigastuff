# makefile for GNU make (automatically generated by makemake)
# NOTE: indent with TAB in GNU makefiles!

# paths are relative to the project directory (current directory during make)

MAINEXE    = bin/sas-c-classic/TestingUnits
OBJDIR = o/sas-c-classic/

# compiler and linker

CC = sc:c/sc
LD = sc:c/sc

# target 'all' (default target)

all : $(MAINEXE)

# main exe

$(OBJDIR)main.o : main.c
	$(CC) nolink main.c

MAINOBJS = $(OBJDIR)main.o

$(MAINEXE) : $(MAINOBJS)
	$(LD) link $(MAINOBJS)


# unit1 test exe

UNIT1TESTEXE = Unit1Test

UNIT1TESTOBJS = Unit1Test.o Unit1.o

$(UNIT1TESTEXE) : $(UNIT1TESTOBJS)
    $(LD) link programname=$(UNIT1TESTEXE) $(UNIT1TESTOBJS)

Unit1Test.o : Unit1Test.c Unit1.h
    $(CC) nolink Unit1Test.c

Unit1.o : Unit1.c Unit1.h
    $(CC) nolink Unit1.c

# target 'clean'

clean:
	-delete $(MAINEXE) $(UNIT1TESTEXE)
	-delete $(OBJDIR)\*.o

