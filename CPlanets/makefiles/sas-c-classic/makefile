# makefile for GNU make (automatically generated by makemake)
# NOTE: indent with TAB in GNU makefiles!

# paths are relative to the project directory (current directory during make)

EXE    = bin/sas-c-classic/CPlanets
OBJDIR = o/sas-c-classic/

# compiler and linker

CC = sc:c/sc
LD = sc:c/sc

# target 'all' (default target)

all : $(EXE)

$(OBJDIR)main.o : main.c
	$(CC) nolink main.c

OBJS = $(OBJDIR)main.o

$(EXE) : $(OBJS)
	$(LD) link $(OBJS)

# target 'clean'

clean:
	-delete $(EXE)
	-delete $(OBJDIR)\*.o
