# makefile for GNU make (automatically generated by makemake)
# NOTE: indent with TAB in GNU makefiles!

# paths are relative to the project directory (current directory during make)

EXE    = bin/gcc-classic/CPlanets
OBJDIR = o/gcc-classic/

# compiler and linker

CC = gcc
LD = gcc

# target 'all' (default target)

all : $(EXE)

$(OBJDIR)main.o : main.c
	$(CC) $(shell cubic:ide/devkits/c/gccprefs) -c -o $(OBJDIR)main.o main.c

OBJS = $(OBJDIR)main.o

$(EXE) : $(OBJS)
	$(LD) $(OBJS) $(shell cubic:ide/devkits/c/gccprefs) -o $(EXE)

# target 'strip'

strip:
	strip --remove-section=.comment $(EXE)

# target 'clean'

clean:
	-delete $(EXE)
	-delete $(OBJDIR)\*.o
